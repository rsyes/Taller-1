        ,"jamiroquai","inception","calambre","portazo","lapiz","puerta"};
        String letra;
        String mem;
        Random rnd; 
        int a;
        int i,j,l;
        int b,m,n;
        boolean x,y;
        y=false;
        m=0;
        b=0;
        l=0;
        n=0;
        hang="d(o|o)p";
        mem="";
        letra="";
        rnd = new Random();
        n=(int)(Math.random()*14);
