        System.out.println(" Bienvenido al juego de ahorcado \n");
        jugada= posible[n];
        a=jugada.length();
        System.out.println(" la palabra tiene " + a + " letras " + jugada);
        if(b==0){
            for(i=0;i<a;i++){
                System.out.print("_");
            }
            }
        while( y==false){
            System.out.println(" escriba una letra ");  
            letra= lector.next();
            if(jugada.indexOf(letra) != -1){
                 b++;
            }
            else{
                m++;
            }
            mem = mem + letra;
            System.out.println(" \n letra(s) que ha usado:  " + mem + " ");
            System.out.println(" nuestro ahorcado va asÃ­ :  "+ hang.substring(0, m));
            l=+mem.length();
            for(i=0;i<a;i++){
                x=false;
                for( j=0;j<l;j++){
                    if((mem.charAt(j)==jugada.charAt(i))){
                    System.out.print(jugada.charAt(i));
                    x=true;
                }
            }
            if(x==true){
            }
            else{
            System.out.print("_");
            }
            }
            if(m==7){
                System.out.print(" \n\n "+jugada);
            }
            if(b==(a)|| m==7 ){
                y=true;
            }
            }
        }
}
